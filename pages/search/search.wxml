<view class="main">

   <view class="weui-search-bar my-weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input"
                           placeholder="{{placeholder}}" value="{{inputVal}}"
                           focus="{{inputShowed}}"
                           bindinput="inputTyping"
                           bindchange="inputChange"
                     />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length>0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <!--<label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">-->
                    <!--<icon class="weui-icon-search" type="search" size="14"></icon>-->
                    <!--<view class="weui-search-bar__text">搜索</view>-->
                <!--</label>-->
            </view>
            <!--<view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>-->
        </view>
    <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
            
            <view class="weui-cell" hover-class="weui-cell_active"
                 wx:for="{{memorySearchList}}"
                 wx:for-item="item" 
                 wx:key="memorySearchList"
                 data-name="{{item.name}}"
                bindtap="bindMemoryNameTap"
            >
                <view class="weui-cell__bd my-weui-cell__bd">
                     <icon class="weui-icon-search" type="search" size="14"></icon>
                    <text>{{item.name}}</text>
                </view>
            </view>
        </view>








    <view hidden="{{zoneVisable}}">
        <view  wx:if="{{inputVal.length == 0}}">
            <view class="main-list">
                <view class="main-list-title">热门搜索</view>
                <view class="main-list-zone">
                    <view class="main-list-item" wx:for="{{hotSearchList}}" wx:for-item="item"
                          wx:key="hotSearchList"
                          data-name="{{item.name}}"
                          bindtap="bindMemoryNameTap"
                    >{{item.name}}</view>
                </view>
            </view>
            <view class="main-list" wx:if="{{historySearchList.length != 0}}">
                <view class="main-list-title">历史搜索</view>
                <view class="main-list-zone">
                    <view class="main-list-item" wx:for="{{historySearchList}}" wx:for-item="item" wx:key="historySearchList"
                          data-name="{{item.name}}"
                          bindtap="bindMemoryNameTap"
                    >{{item.name}}</view>
                </view>
            </view>

        </view>
    </view>
    <view hidden="{{!zoneVisable}}">
        <view  wx:if="{{inputVal.length == 0}}">
            <view class="main-list">
                <view class="main-list-title">当前城市</view>
                <view class="main-list-zone">
                    <view class="main-list-item" wx:for="{{hotSearchList}}" wx:for-item="item"
                          wx:key="hotSearchList"
                          data-name="{{item.name}}"
                          bindtap="bindMemoryNameTap"
                    >{{item.name}}</view>
                </view>
            </view>

        </view>
    </view>

  
</view>
