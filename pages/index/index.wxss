/**index.wxss**/

.main {
  background: #fff;
  width: 100%;
  padding: 6px 0;
}
/*---------------------------------------搜索框样式 begin---------------------------*/
.main-search{
    display: flex;
    margin: 0 12px;
    border-radius: 4px;
    background: #F2F2F2;
    height: 40px;
    border: 1px solid #F2F2F2;
    font-family: PingFangSC-Regular;
}
 .main-search .main-city-zone{
   position: relative;
     width: 58px;
    margin:10px 0 ;
    padding:0 20px 0 10px;
     font-size: 14px;
     color: #333333;
     letter-spacing: 0;
     height: 20px;
     line-height: 20px;
     border-right: 1px solid #E6E6E6;
 }


.main-city-zone .main-city-arrow{
  position: absolute;
  top:10px;
  right:10px;

}
/*下箭头*/
.main-city-triangle {
    height: 0;
    width: 0;
    border-top: 5px solid #E6E6E6;
    /*此处将左右的边框设置为透明色*/
    border-right: 5px solid transparent ;
    border-left: 5px solid transparent;
}

.main-hotel-zone{
    margin:10px 0 ;
    padding:0 0 0 10px;
    font-size: 12px;
    color: #9A9A9A;
    letter-spacing: 0;
    line-height: 20px;
    height: 20px;
    background: red;

}
.main-hotel-zone .my-weui-icon-search{
  margin:6rpx 10rpx 0;
}
.main-hotel-zone .main-input{
 display:inline-block;
font-size:14px;
vertical-align:middle;
text-indent: 10rpx;
  
}
/*---------------------------------------列表样式 begin---------------------------*/
.main-list{
  width: 100%;
  height: 100%;
  overflow: hidden;
  
}
.main-list-zone{
  width: 100%;
  font-size: 26rpx;
  color:#999;
 line-height:1.2;
 margin-top:15rpx; 
background: #fff;
}
.main-item-up-zone{
  padding-left:30rpx;
    border-bottom: 1px solid #e6e6ea;
}
.main-item-up{
  display:-webkit-box;
 display:-webkit-flex;
 display:flex;
  -webkit-box-align:center;
 -webkit-align-items:center;
 align-items:center;
  padding:30rpx 0;
position:relative;



}
.main-item-up .main-item-img-zone{
margin-right:.8em;
width:110rpx;
height:110rpx;
line-height:110rpx;
text-align:center;



}
.main-item-img-zone .main-item-img{
  width:100%;
height:100%;
vertical-align:top;


}
.main-item-context{
  -webkit-box-flex:1;
-webkit-flex:1;
flex:1;
min-width:0;
line-height:46rpx;


}
.item-contxt-title{
  color: #000;
  font-size:32rpx; 
  font-weight:700;
}
 .item-contxt-level .contxt-level-star{
  display: inline-block;
  width:30rpx;
 height:30rpx;
 line-height:30rpx;
text-align:center;
vertical-align:middle;



 }
.item-contxt-level .contxt-level-star .star-img{
   width:100%;
height:100%;


 }

.item-contxt-level .item-contxt-scores{
  display: inline-block;
  margin: 0 15rpx;
  color:#F6B13E;
  vertical-align: middle;
}
.item-contxt-level .item-contxt-type{
   display: inline-block;
  margin-left: 5rpx;
  vertical-align: middle;
}
.item-contxt-priceAndPrice .item-contxt-distance{
  margin-left: 30rpx;
}
.main-item-btn-zone{
  position: absolute;
  top:30%;
  right:30rpx;
  
}
.main-item-btn-zone .main-item-btn{
  border-radius:10rpx;
  color:#000000;
  background-color:#F8F8F8;
  display:block;
  padding:8rpx 3rpx ;
  border: 1rpx solid #ccc;
  margin-right: 50rpx;
}
.main-item-down{
  background: #fff;
  color:#F6B13E;
  padding: 20rpx 10rpx;
}
.main-item-down .item-down-num{
  padding: 30rpx;
}
